import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner scan = new Scanner(System.in);
        
        String name = scan.next();
        int numFollowers = scan.nextInt();
        int posts = scan.nextInt();
        float numHours = scan.nextFloat();
        
        System.out.print("My name is "+name+", my Instagram has "+numFollowers+" followers, I have posted "+posts+" posts, "+"and I use Instagram for "+numHours+" hours daily.");
    }
}
